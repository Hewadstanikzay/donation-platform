  <script>
    // ุฒุจุงู ูพุดโูุฑุถ: ุฏุฑ
    const setLang = (lang) => {
      const fa = document.querySelectorAll('.t-fa');
      const en = document.querySelectorAll('.t-en');
      const faBtn = document.getElementById('lang-fa');
      const enBtn = document.getElementById('lang-en');

      if (lang === 'fa') {
        document.documentElement.lang = 'fa';
        document.documentElement.dir = 'rtl';
        fa.forEach(el => el.style.display = '');
        en.forEach(el => el.style.display = 'none');
        faBtn.classList.add('active');
        enBtn.classList.remove('active');
      } else {
        document.documentElement.lang = 'en';
        document.documentElement.dir = 'ltr';
        fa.forEach(el => el.style.display = 'none');
        en.forEach(el => el.style.display = '');
        enBtn.classList.add('active');
        faBtn.classList.remove('active');
      }
    };

    document.getElementById('lang-fa').addEventListener('click', () => setLang('fa'));
    document.getElementById('lang-en').addEventListener('click', () => setLang('en'));

    // ุดุฑูุน ุจุง ุฏุฑ
